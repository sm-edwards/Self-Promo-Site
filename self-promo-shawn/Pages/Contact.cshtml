<h3 class="collapsible">Feedback Form</h3>
<form method="post" action="https://webdevbasics.net/scripts/demo.php">
  <label for="contact_name" placeholder="Enter your name here">Name:</label>
  <input type="text" name="contact_name" id="contact_name" maxlength="50" required>
  <label for="contact_email" placeholder="Enter your email address here">Email Address:</label>
  <input type="email" name="contact_email" id="contact_email" maxlength="50" required>
  <label for="contact_phone" placeholder="Enter your phone number here">Phone Number:</label>
  <input type="tel" name="contact_phone" id="contact_phone" maxlength="12" >
  <label for="contact_purpose" placeholder="Select your purpose">Purpose:</label>
  <select name="contact_purpose" id="contact_purpose">
    <option value="">Please select a purpose</option>
    <option value="comment">Site Comment</option>
    <option value="question">General Question</option>
    <option value="employment">Employment Opportunity</option>
    <option value="message">Personal Message</option>
  </select>
  <label for="contact_message" placeholder="Enter your message here">Message:</label>
  <textarea name="contact_message" id="contact_message" required>
  </textarea>
  <input type="submit">
</form>

